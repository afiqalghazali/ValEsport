<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ValEsport" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorAccent">@color/light</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorOnSecondary">@color/light</item>
    </style>

    <style name="Theme.ValEsport" parent="Base.Theme.ValEsport" />

    <style name="Theme.ValEsport.MySplash" parent="Theme.ValEsport">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="headline">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>